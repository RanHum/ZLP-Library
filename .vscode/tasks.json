			"command": "cd ./src/client && qmake && make",
			"problemMatcher": [],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "build and run client",
			"type": "shell",
			"command": "build_run_client",
			"problemMatcher": [],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "build server",
			"type": "shell",
			"command": "cd ./src/server && qmake && make",
			"problemMatcher": [],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "build server in Docker",
			"type": "shell",
			"command": "docker_rebuild_server",
			"problemMatcher": [],
			"group": {
				"kind": "build",
